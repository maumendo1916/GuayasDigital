<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guayas Digital - @ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/Content/Site.css" rel="stylesheet">
    <link href="~/Content/css/musicplayer.css" rel="stylesheet">

    @*@Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <!-- Logo y marca -->
            <div class="d-flex align-items-center">
                <iframe src="~/ContEstatico/cubo.html"
                        width="80"
                        height="65" scrolling="no"
                        style="border:none; margin-top:-5px">
                </iframe>
                <img src="~/Content/images/gd01.png" alt="Texto Guayas Digital" style="width: 180px; height: auto;">
            </div>
            <!-- Botón colapsable -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Menú -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link me-3 active" href="@Url.Action("Index", "Home")">Inicio</a>
                    </li>
                    <li class="nav-item dropdown  me-3 ">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Desarrollo de Software
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("DesarrolloSoftware", "Home")">Desarrollo de Software</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DesarrolloApps", "Home")">Aplicaciones Moviles</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("DesarrolloAppsConAi", "Home")">Aplicaciones con Inteligencia Artifical</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown  me-3 ">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Servicios
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("OutSourcing", "Home")">Outsourcig / Servicios Profesionales</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Consultoria", "Home")">Consultoria Informática</a></li>
                        </ul>
                    </li>
                    <li class="nav-item  me-3 ">
                        <a class="nav-link active" href="@Url.Action("Contact", "Home")">Contáctenos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />

        <!-- Footer con Reproductor de Música -->
        <footer class="footer">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="contador-container me-3">
                            <div class="contador-titulo">Visitas</div>
                            <div id="cont" class="contador-numero flicker digital-font">0</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <!-- Reproductor de Música -->
                    <div id="music-player">
                        <!-- Información de la canción y barra de audio -->
                        <div class="mb-2">
                            <div id="current-song" class="small text-muted mb-1">Cargando música...</div>
                            <audio id="audio-player" controls preload="metadata" class="w-100" style="height: 40px;">
                                <source src="" type="audio/mpeg">
                                <source src="" type="audio/mp4">
                                Your browser does not support the audio element.
                            </audio>
                        </div>

                        <!-- Controles personalizados debajo -->
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <button id="prev-btn" class="btn btn-sm btn-outline-secondary me-2">
                                    <i class="bi bi-skip-backward-fill"></i>
                                </button>
                                <button id="play-pause-btn" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-play-fill"></i>
                                </button>
                                <button id="next-btn" class="btn btn-sm btn-outline-secondary me-2">
                                    <i class="bi bi-skip-forward-fill"></i>
                                </button>
                                <button id="shuffle-btn" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-shuffle"></i>
                                </button>
                            </div>

                            <div class="d-flex align-items-center">
                                <button id="volume-btn" class="btn btn-sm btn-outline-secondary me-2">
                                    <i class="bi bi-volume-up-fill"></i>
                                </button>
                                <input type="range" id="volume-slider" min="0" max="100" value="50" class="form-range" style="width: 80px;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha256-CDOy6cOibCWEdsRiZuaHf8dSGGJRYuBGC+mjoJimHGw=" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/site.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Reproductor de Música -->
    <script src="~/Scripts/musicplayer.js"></script>

</body>
</html>